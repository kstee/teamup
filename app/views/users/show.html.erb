			<div class="row">
			<ul class="detail-box">
					<% @listing.each do |list| %>
						<li>
						<strong><%= list.description %></strong>
						<br>Venue: <%= list.address %>
						<br>Status: <%= list.status %>			
						</li>
						<p></p>
					<% end %>
				</ul>
			</div>
			</div>
			</div>
			</div>
			</div>
			</div>
			</div>
			</div>
			</div>
	</div>
	</div>
	</div>
</div>

