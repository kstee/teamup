<div class="container">
  <% if current_user %>
    <h3>My Profile</h3>
    <p><%= link_to 'Edit Profile', edit_user_registration_path %></p>
  <% else %>
    <h3>@user.name's Profile</h3>
  <% end %>
</div>

<div class="container">
  <div class="row">
  	<div class="col-md-12">
    
      	<div class="panel panel-default">
  			<div class="panel-body">
      		<div class="row">
            
            <div class="col-xs-12 col-sm-4 text-center">
              <% if !@user.photos.blank? %>
                <%= image_tag(@user.photos[0].thumb.url, class: "center-block img-circle img-responsive") %>
              <% end %>

              <ul class="list-inline ratings text-center" title="Ratings">
                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
                <li><span>23 total</span></li>
              </ul>
            </div>
            
            <div class="col-xs-12 col-sm-8">
              <h2><%= @user.name %></h2>
              <p><strong>About: </strong> Full time scientist, passionate sportsman  </p>
              <p><strong>Favorite sports: </strong> Futsal, basketball, badminton. </p>
              <p><strong>Favorite positions: </strong>
                <span class="label label-info tags">Futsal winger</span> 
                <span class="label label-info tags">Basketball power forward</span>
              </p>
            </div>

            <div class="col-xs-12 col-sm-4">
                <h2><strong> 207 </strong></h2>                    
                <p><small>Followers</small></p>
                <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>
            </div><!--/col-->
            
            <div class="col-xs-12 col-sm-4">
                <h2><strong>185</strong></h2>                    
                <p><small>Following</small></p>
                <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>
            </div><!--/col-->

            <div class="col-xs-12 col-sm-8 pull-right">
              <div style="padding: 30px 0 15px">
	            <div style="width: 100%; height: 13px; border-bottom: 1px solid orange; text-align: center">
			      <span style="font-size: 16px; background-color: #FFFFFF; padding: 0 10px;"> Reviews </span>
			    </div>
              </div>

			<div class="col-xs-12">
				<div class="rating-block">
					<h4>Average rating</h4>
					<h2 class="bold padding-bottom-7">4.8 <small>/ 5</small></h2>
					<ul class="list-inline ratings" title="Ratings">
		                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
		                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
		                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
		                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
		                <li><a href="#"><span class="fa fa-star fa-md"></span></a></li>
		                <li><span>23 total</span></li>
		            </ul>
				</div>
			</div>
			
			<div class="col-xs-12 col-sm-8">
				<h4>Rating breakdown</h4>
				<div class="pull-left">
					<div class="pull-left" style="width:100px; line-height:1;">
						<div style="height:9px; margin:5px 0;">Show </div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="5" style="width: 100%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
				</div>
				
				<div class="pull-left">
					<div class="pull-left" style="width:100px; line-height:1;">
						<div style="height:9px; margin:5px 0;">Skill </div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="4" aria-valuemin="0" aria-valuemax="5" style="width: 80%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
				</div>
				
				<div class="pull-left">
					<div class="pull-left" style="width:100px; line-height:1;">
						<div style="height:9px; margin:5px 0;">Punctuality</div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="5" style="width: 100%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
				</div>
				
				<div class="pull-left">
					<div class="pull-left" style="width:100px; line-height:1;">
						<div style="height:9px; margin:5px 0;">Teamwork</div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="5" style="width: 100%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
				</div>
			</div>
		
		    </div>


            </div>
                        
      		</div><!--/row-->
        </div><!--/panel-body-->
      </div><!--/panel-->




<div class="container">
	<div class="col-md-12">
	<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-lg-12 content-box">
			<div class="row row-featured">
			<div style="clear: both"></div>
			<div class=" relative  content  clearfix">
			<div class="">
			<div class="tab-lite">
			 
			<ul role="tablist" class="nav nav-tabs ">
			<li class="active" role="presentation"><a data-toggle="tab" role="tab" aria-controls="tab1" href="#tab1" aria-expanded="true"><i class="icon-location-2"></i>Favorite Activities</a></li>
