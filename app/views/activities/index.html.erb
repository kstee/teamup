<h1>activities#index</h1>
 
<table>
 
  <% @activities.each do |activity| %>
    <tr>
      <td><%= activity.activity_type %></td>
      <td><%= activity.description %></td>
      
    </tr>
  <% end %>
</table>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">I Want To</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div id="join-box-outer" class="col-lg-6 col-md-12 text-center">
                <div id="join-box" class="service-box" style="cursor: pointer;" onclick="window.location='/activities/join';">
                    <%= image_tag("icon-join.png") %>
                    <h3>Join Team Activity</h3>
                    <p class="text-muted">You have a game this Friday but your friend just call in sick? Don't worry, you can find other players and join their team!</p>
                </div>
            </div>
            <div id="create-box-outer" class="col-lg-6 col-md-12 text-center">
                <div id="create-box" class="service-box" style="cursor: pointer;" onclick="window.location='/activities/create';">
                    <%= image_tag("icon-create.png") %>
                    <h3>Host Team Activity</h3>
                    <p class="text-muted">Either you wanna play with other team or just looking for players to join your team, you can create a new event and invite players to join you.</p>
                </div>
            </div>
        </div>
    </div>
</section>

