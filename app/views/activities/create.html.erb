 <%= form_tag({controller: "listings", action: "new"}, method: "get", class: "nifty_form") do %>
  <h2>Activity Type</h2>
  <% @activities.each do |activity| %>
    <p>
      <%= radio_button_tag 'activity_id', activity.id %>
      <%= activity.activity_type %>
    </p>
  <% end %>
  <p>
    <%= submit_tag("Submit") %>
  </p>
<% end %>
